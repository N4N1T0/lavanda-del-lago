{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": {
					"level": "off"
				}
			},
			"correctness": {
				"noUnusedImports": {
					"level": "error"
				},
				"noInvalidUseBeforeDeclaration": {
					"level": "off"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteProperties": "preserve",
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignore": ["sanity/schemas/*.ts"]
	}
}
